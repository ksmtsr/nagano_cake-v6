<div class="container">
  <div class="m-5">
  <headline>商品詳細</headline>
  </div>
  </div>
 </div>
  <div class="row justify-content-center">
    <div class="col-3">
  <% if @item.image.attached? %>
    <%= image_tag @item.image, size: "300x250" %>
  <% else %>
    <%= image_tag 'no_image.jpg', size: "200x200" %>
  <% end %>
   </div>
  <div class="col-5">
<table class="table table-borderless">
<tr>
  <td>商品名</td>
  <td><%= @item.name %></td>
</tr>
<tr>
  <td>商品説明</td>
  <td><%= @item.introduction %></td>
</tr>
<tr>
  <td>ジャンル</td>
  <td><%= @item.genre_id %></td>
</tr>
<tr>
   <td>税抜価格</td>
   <td><%= @item.price %>
  (<%= @item.with_tax_price %>円)</td>
</tr>
<tr>
  <td>販売ステータス</td>
  <td>
  <% if @item.is_active == true %>
  販売中
  <% else %>
  販売停止中
  <% end %>
  </td>
</tr>
</table>
  </div>
  </div>
  <div class="text-center">
  <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-lg btn-success"  %>
  </div>
</div>

