<div class="container">
  <div class="row">
  <div class="mt-3 mb-3">
  <headline>管理者ログイン</headline>
</div>
<div class="d-flex justify-content-center">
<div class="m-5">
<%= form_with model: @admin, url: admin_session_path, method: :post do |f| %>
  <div class="form-group row">
   <label class="col-sm-6 text-right px-5">メールアドレス</label>
    <div class="col-md-6">
  <%= f.text_field :email %>
  </div>
</div>
<div class="form-group row">
  <label class="col-sm-6 text-right px-5">パスワード</label>
    <div class="col-md-6">
    <%= f.password_field :password %>
 </div>
</div>
  <div class="text-center">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
  <% end %>
   </div>
  </div>
</div>
</div>
<%= render "admin/shared/links" %>
