<div class="container">
  <div class="row">
   <div class="mt-3 mb-3">
    <headline><%= @customer.full_name %>さんの会員詳細</headline>
   </div>
  </div>
  </div>
  <div class="container">
 <div class="text-justify">
<table class="table w-50 mb-5 table-borderless">
<tr>
  <td scope="col" style="width: 30%">会員ID</td>
   <td scope="col" style="width: 70%">
    <%= @customer.id %>
  </td>
</tr>
<tr>
  <td>氏名</td>
  <td><%= @customer.full_name %></td>
</tr>
<tr>
  <td>カナ</td>
   <td><%= @customer.full_name_kana %></td>
</tr>
<tr>
  <td>郵便番号</td>
   <td><%= @customer.postal_code %></td>
</tr>
<tr>
  <td>住所</td>
   <td><%= @customer.address %></td>
</tr>
<tr>
  <td>電話番号</td>
   <td><%= @customer.telephone_number %></td>
</tr>
<tr>
  <td>メールアドレス</td>
   <td><%= @customer.email %></td>
</tr>
<tr>
  <td>会員ステータス</td>
  <td><% if @customer.is_deleted == false %>
  有効
<% else %>
  退会
    <% end %></td>
</tr>
</table>
  <div class="p-2 mt-5 ml-3">
    <%= link_to "編集する", admin_edit_customer_path(@customer), class: "btn btn-success btn-sm" %>
  </div>
 </div>
  <div class="p-2 mt-3">
    <%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-primary btn-sm" %>
  </div>
</div>

