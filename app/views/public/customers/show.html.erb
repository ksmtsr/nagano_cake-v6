<div class="container">
  <div class="row">
   <div class="mt-3 mb-3">
    <headline>マイページ</headline>
   </div>
  </div>
  </div>
  <div class="container">
 <div class="text-justify">
 <div class="d-flex flex-row">
  <div class="h5 p-2 mt-5 font-weight-bold">登録情報</div>
   <div class="p-2 mt-5">
    <%= link_to "編集する", edit_customers_path, class: "btn btn-success btn-sm" %>
   </div>
</div>
<table class="table w-50 mb-5 table-bordered">
<tr>
  <td scope="col" style="width: 30%">氏名</td>
   <td scope="col" style="width: 70%">
    <%= @customer.full_name %>
  </td>
</tr>
<tr>
  <td>カナ</td>
   <td><%= @customer.full_name_kana %></td>
</tr>
<tr>
  <td>郵便番号</td>
   <td><%= @customer.postal_code %></td>
</tr>
<tr>
  <td>住所</td>
   <td><%= @customer.address %></td>
</tr>
<tr>
  <td>電話番号</td>
   <td><%= @customer.telephone_number %></td>
</tr>
<tr>
  <td>メールアドレス</td>
   <td><%= @customer.email %></td>
</tr>
</table>
<div class="d-flex flex-row">
 <div class="h5 p-2 mt-3 font-weight-bold">配送先</div>
  <div class="p-2 mt-3 ml-3">
    <%= link_to "登録／一覧", addresses_path(@address), class: "btn btn-primary btn-sm" %>
  </div>
 </div>
<div class="d-flex flex-row">
 <div class="h5 p-2 mt-3 font-weight-bold">注文履歴</div>
  <div class="p-2 mt-3">
    <%= link_to "一覧を見る", orders_path, class: "btn btn-primary btn-sm" %>
  </div>
 </div>
</div>
 </div>
  </div>
