<div class="container">
   <div class="mt-3 mb-5">
    <headline>配送先編集</headline>
    </div>
      <%= form_with model: @addresses, url: addresses_update_path, method: :patch do |f| %>
      <div class="form-group row">
      <div class="col-3">郵便番号(ハイフン無し)</div>
      <div class="col-8">
        <%= f.text_field :postal_code, class: "col-auto", autofocus: true, autocomplete: "postal_code" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-3">住所</div>
      <div class="col-8">
        <%= f.text_field :receiver_address, class: "col-auto w-75", autofocus: true, autocomplete: "receiver_address" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-3">宛名</div>
      <div class="col-8">
        <%= f.text_field :name, class: "col-auto", autofocus: true, autocomplete: "name" %>
      </div>
    </div>
  <div class="text-right">
    <%= f.submit "変更内容を保存", class: "btn btn-lg btn-success w-20" %>
    </div>
    <% end %>
</div>
